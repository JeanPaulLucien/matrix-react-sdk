/* blur amounts for left left panel (only for element theme) */
/* ******************** */
:root {
    --lp-background-blur: 45px;
}
/* ******************** */

:root {
    --transition-short: 0;
    --transition-standard: 0;
}

/* it makes scrollbar sizes 8px when h and w removed */
::-webkit-scrollbar {
    max-width: 8px;
    max-height: 8px;
}

html, body {
    height: 100%;
}

body {
    margin: 0;
}
